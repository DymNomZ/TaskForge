<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:letterSpacing="0.05"
            android:layout_marginTop="50dp">
        </TextView>

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settings"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp">
        </ImageButton>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/basic"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:background="@drawable/avatar">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/nickname_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dymes"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/orange_2"
                android:textSize="30dp"
                android:layout_gravity="left"
                android:letterSpacing="0.05"
                android:layout_marginLeft="20dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@DymNomZ"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/red_1"
                android:textSize="18dp"
                android:layout_gravity="left"
                android:letterSpacing="0.05"
                android:layout_marginLeft="20dp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/basic"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart"
                android:layout_gravity="center"
                android:layout_marginHorizontal="12dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/orange_2"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:letterSpacing="0.05">

            </TextView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coin"
                android:layout_gravity="center"
                android:layout_marginHorizontal="12dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/orange_2"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:letterSpacing="0.05">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/level"
                android:layout_gravity="center"
                android:layout_marginHorizontal="12dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/orange_1"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:letterSpacing="0.05">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Since"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_gravity="left"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">
    </TextView>

    <TextView
        android:id="@+id/member_since_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:textColorHint="@color/orange_1"
        android:hint="Date"
        android:padding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/orange_1">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Logged In"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_gravity="left"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">
    </TextView>

    <TextView
        android:id="@+id/last_log_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:textColorHint="@color/orange_1"
        android:hint="Date"
        android:padding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/orange_1">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:marginRight="30dp"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/orange_2"
            android:background="@drawable/rounded_button"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:textAlignment="center">
        </Button>

        <Button
            android:id="@+id/pets_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/orange_2"
            android:background="@drawable/rounded_button"
            android:text="View Pets"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:textAlignment="center">
        </Button>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/to_quests_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/quests"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_inventory_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/to_quests_btn"
            android:background="@drawable/inventory"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_tasks_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/to_inventory_btn"
            android:layout_marginStart="40dp"
            android:background="@drawable/tasks"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_shop_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/to_tasks_btn"
            android:background="@drawable/shop"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_menu_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/to_shop_btn"
            android:background="@drawable/menu"
            android:backgroundTint="@color/white" />

    </RelativeLayout>

</LinearLayout>