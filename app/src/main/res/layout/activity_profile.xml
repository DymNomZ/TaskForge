<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tasks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:letterSpacing="0.05"
        android:layout_marginTop="12dp">
    </TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:background="@drawable/basic"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/orange_1"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:id="@+id/username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/basic"
            android:hint="username"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:padding="12dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/orange_1"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/basic"
            android:hint="email"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:padding="12dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textStyle="bold"
            android:textColor="@color/orange_1"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:id="@+id/birthday_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/basic"
            android:hint="birthday"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:padding="12dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textColor="@color/orange_1"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:id="@+id/address_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/basic"
            android:hint="address"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:padding="12dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp">

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/save_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/orange_1"
        android:text="SAVE"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:letterSpacing="0.05"
        android:textAlignment="center">

    </Button>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/to_profile_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/profile_icon"
            android:backgroundTint="@color/orange_1" />

        <Button
            android:id="@+id/to_landing_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/to_profile_btn"
            android:layout_marginStart="60dp"
            android:background="@drawable/landing_icon"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_settings_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/to_landing_btn"
            android:layout_marginStart="60dp"
            android:background="@drawable/settings_icon"
            android:backgroundTint="@color/red_1" />

    </RelativeLayout>

</LinearLayout>