<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="@drawable/basic">

    <ImageView
        android:padding="12dp"
        android:id="@+id/imageview_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/basic"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogue Title"
        android:textSize="25dp"
        android:textColor="@color/orange_2"
        android:fontFamily="@font/poppins_semibold">

    </TextView>

    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogue description"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Level: "
            android:textSize="16dp"
            android:textColor="@color/orange_1"
            android:textAlignment="center"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/poppins_regular">

        </TextView>

        <TextView
            android:id="@+id/required_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16dp"
            android:textColor="@color/orange_2"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular">

        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/orange_2"
        android:background="@drawable/rounded_button"
        android:text="START BATTLE"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        android:padding="12dp"
        android:letterSpacing="0.05"
        android:textAlignment="center">
    </Button>

</LinearLayout>