<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:cropToPadding="true"
        android:layout_marginTop="200dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Logout"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:layout_marginVertical="20dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to log out?"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:layout_marginVertical="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/rounded_button_bordered"
            android:text="CANCEL"
            android:textColor="@color/taskforge_orange_1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:textAlignment="center">

        </Button>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/taskforge_orange_1"
            android:text="LOGOUT"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:letterSpacing="0.05"
            android:textAlignment="center">

        </Button>

    </LinearLayout>

</LinearLayout>