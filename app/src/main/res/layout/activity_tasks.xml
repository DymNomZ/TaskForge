<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TasksActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:letterSpacing="0.05"
            android:layout_marginTop="50dp">
        </TextView>

        <ImageButton
            android:id="@+id/create_task_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/add"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp">
        </ImageButton>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/basic"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:background="@drawable/avatar">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp">
                </ImageView>

                <TextView
                    android:id="@+id/hp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/orange_2"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:letterSpacing="0.05">

                </TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/coin"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp">
                </ImageView>

                <TextView
                    android:id="@+id/coins_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/orange_2"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:letterSpacing="0.05">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/level"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp">
                </ImageView>

                <TextView
                    android:id="@+id/level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/orange_1"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:letterSpacing="0.05">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/tasks_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/tasks"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:visibility="gone">
    </ImageView>

    <TextView
        android:id="@+id/these_are_your_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="These are your tasks"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:layout_marginTop="20dp"
        android:visibility="gone">
    </TextView>

    <TextView
        android:id="@+id/ready_to_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to start one?"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:visibility="gone">
    </TextView>

    <ListView
        android:id="@+id/tasks_list"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="20dp">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/to_quests_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/quests"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_inventory_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/to_quests_btn"
            android:background="@drawable/inventory"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_tasks_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/to_inventory_btn"
            android:layout_marginStart="40dp"
            android:background="@drawable/tasks"
            android:backgroundTint="@color/white" />

        <Button
            android:id="@+id/to_shop_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/to_tasks_btn"
            android:background="@drawable/shop"
            android:backgroundTint="@color/red_1" />

        <Button
            android:id="@+id/to_menu_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/to_shop_btn"
            android:background="@drawable/menu"
            android:backgroundTint="@color/red_1" />

    </RelativeLayout>

</LinearLayout>