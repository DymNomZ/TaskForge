<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:letterSpacing="0.05"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:clickable="true">
        </TextView>

        <TextView
            android:id="@+id/new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Task"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:letterSpacing="0.05"
            android:layout_marginTop="50dp">
        </TextView>

        <TextView
            android:id="@+id/create_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_toEndOf="@id/new_task"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:clickable="true">
        </TextView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:textColorHint="@color/orange_1"
        android:hint="Task Title"
        android:padding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/orange_1">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:textColorHint="@color/orange_1"
        android:hint="Select Date"
        android:padding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/orange_1">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/basic"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/trivial"
                android:backgroundTint="@color/orange_2">
            </Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/easy"
                android:backgroundTint="@color/orange_2">
            </Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/medium"
                android:backgroundTint="@color/orange_2">
            </Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/hard"
                android:backgroundTint="@color/orange_2">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trivial"
                android:textSize="20dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/orange_2">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textSize="20dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/orange_2">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textSize="20dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/orange_2">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:textSize="20dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/orange_2">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>