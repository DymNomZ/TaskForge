<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the Developer"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:letterSpacing="0.05"
        android:layout_marginVertical="25dp">
    </TextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dymes"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, I'm John Dymier Borgonia!"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Computer Science student, currently exploring the world of programming."
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:layout_marginBottom="25dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The languages I use:"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C, C++, Dart, Java, Kotlin"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05">
    </TextView>

</LinearLayout>