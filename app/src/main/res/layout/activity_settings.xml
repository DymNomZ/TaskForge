<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tasks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:letterSpacing="0.05"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="100dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textStyle="bold"
            android:textColor="@color/taskforge_orange_1"
            android:textSize="25dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:text="Main Theme"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font"
            android:textStyle="bold"
            android:textColor="@color/taskforge_orange_1"
            android:textSize="25dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:text="Roboto"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textStyle="bold"
            android:textColor="@color/taskforge_orange_1"
            android:textSize="25dp"
            android:gravity="left"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:text="22"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:layout_marginHorizontal="32dp">

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/about_dev_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/taskforge_orange_1"
        android:text="About the developer"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:letterSpacing="0.05"
        android:textAlignment="center">

    </Button>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/to_profile_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/profile_icon"
            android:backgroundTint="@color/taskforge_red_1" />

        <Button
            android:id="@+id/to_landing_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/to_profile_btn"
            android:layout_marginStart="60dp"
            android:background="@drawable/landing_icon"
            android:backgroundTint="@color/taskforge_red_1" />

        <Button
            android:id="@+id/to_settings_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/to_landing_btn"
            android:layout_marginStart="60dp"
            android:background="@drawable/settings_icon"
            android:backgroundTint="@color/taskforge_orange_1" />

    </RelativeLayout>

</LinearLayout>